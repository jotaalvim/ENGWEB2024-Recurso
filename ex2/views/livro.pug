extends layout


block content
  .w3-card-4
    header.w3-container.w3-cyan(style="position: fixed; top: 0; left: 0; margin-left: 0; width: 100%")
        h1(style="text-align: center")
            span Página do livro
        
  .w3-container(style="margin-top: 50px") 
  body  
    div.w3-row
        div.w3-col.s6
            h1 #{livro.title}
        div.w3-col.s6
            if livro.coverImg
                img(src=livro.coverImg)
    ul.w3-ul 
        li Título: #{livro.title}
        li Id do Livro: #{livro._id}
        
        li Autor: #{livro.author}
        li Avaliação: #{livro.rating}
        li Descrição: #{livro.description}
        li Idioma: #{livro.language}
        li ISBN: #{livro.isbn}
        li Gêneros: #{livro.genres}
        li Personagens: #{livro.characters}
        li Formato do Livro: #{livro.bookFormat}
        li Edição: #{livro.edition}
        li Páginas: #{livro.pages}
        li Editora: #{livro.publisher}
        li Data de Publicação: #{livro.publishDate}
        li Data da Primeira Publicação: #{livro.firstPublishDate}
        li Prêmios: #{livro.awards}
        li Número de Avaliações: #{livro.numRatings}
        li Avaliações por Estrelas: #{livro.ratingsByStars}
        li Percentual de Gostaram: #{livro.likedPercent}
        li Pontuação BBE: #{livro.bbeScore}
        li Votos BBE: #{livro.bbeVotes}
        li Preço: #{livro.price}


    a(href='/')
        button(type='button') Voltar para a página inicial
  footer.w3-container.w3-cyan(style="position: fixed; bottom: 0; left: 0; margin-left: 0; width: 100%; height: 50px; text-align: center; line-height: 50px;")
        address 
            | EngWeb2024::pg53902::#{data}


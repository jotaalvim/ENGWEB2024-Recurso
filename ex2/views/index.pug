extends layout


block content
  .w3-card-4
    header.w3-container.w3-cyan(style="position: fixed; top: 0; left: 0; margin-left: 0; width: 100%")
        h1(style="text-align: center")
            span Lista de Filmes
  .w3-container(style="margin-top: 50px") 
  body  
    table.w3-table.w3-striped.w3-bordered.responsive-table
      thead
        tr
          th Id
          th Title
          th Author
          th Publish Date
          th Pages
      tbody
        each livro in livros
          tr
            td
              a(href='/'+livro._id)=livro._id
            td= livro.title
            td
              a(href='/authors/'+livro.author)=livro.author
            td= livro.publishDate
            td= livro.pages
  footer.w3-container.w3-cyan(style="position: fixed; bottom: 0; left: 0; margin-left: 0; width: 100%; height: 50px; text-align: center; line-height: 50px;")
        address 
            | EngWeb2024::pg53902::#{data}


